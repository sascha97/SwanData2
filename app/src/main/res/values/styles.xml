<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextStyle">@style/SwanData_EditTextStyle</item>
        <item name="android:textViewStyle">@style/SwanData_TextViewStyle</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SwanData_EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/hint_grey</item>
    </style>

    <style name="SwanData_TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="button_base">
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
