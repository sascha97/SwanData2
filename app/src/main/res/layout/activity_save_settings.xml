<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorAccent"
                android:text="@string/export_settings"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/export_settings_summary"/>

            <Button
                android:id="@+id/button_export_settings"
                android:text="@string/export_settings"
                android:drawableLeft="@drawable/ic_settings_export"
                android:drawableStart="@drawable/ic_settings_export"
                android:background="@drawable/export_button"
                style="@style/button_base" />

            <include layout="@layout/divider" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorAccent"
                android:text="@string/import_settings"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/import_settings_summary"/>

            <Button
                android:id="@+id/button_import_settings"
                android:text="@string/import_settings"
                android:drawableLeft="@drawable/ic_settings_import"
                android:drawableStart="@drawable/ic_settings_import"
                android:background="@drawable/import_button"
                style="@style/button_base" />

            <include layout="@layout/divider" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorAccent"
                android:text="@string/reset_default_settings"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="@string/reset_default_settings_summary"/>

            <Button
                android:id="@+id/button_reset_settings"
                android:text="@string/reset_default_settings"
                android:drawableLeft="@drawable/ic_delete"
                android:drawableStart="@drawable/ic_delete"
                android:background="@drawable/reset_button"
                style="@style/button_base" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>